{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@env": ["node_modules/react-native-dotenv"],
      "@firebase/auth" : ["node_modules/@firebase/auth/dist/index.rn.d.ts"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "node_modules/react-native-dotenv",
    "src/**/*",
    "components/**/*",
    "App.tsx",
    "env.d.ts",
    "firebase.ts"
  ]
}
